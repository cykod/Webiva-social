<% if flash[:notice] %>
      <div id='flash_notice' class='flash_notice'>
        <%= flash[:notice] %>
      </div>
<% end -%>
<% remote_cms_form_for  :entry, @entry, :url => { :action => 'view', :tab => @tab }, :update => "tab_#{@tab}", :html => { :class => 'admin_form' } do |f| -%>
  <% @content_model.content_model_fields.each do |fld| %>
    <% if fld.field != 'user_id' %>
       <%= fld.form_field(f,:editor => true) %>
    <% end -%>
  <% end -%>
  <%= f.submit_tag 'Update' %>
<% end -%>
