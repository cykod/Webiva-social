<div class='cms_form'>
<%  paragraph_options_form_for :edit_group do |f| -%>
  <%= f.select :social_unit_type_id, [['--Any Type--',nil]] +  SocialUnitType.select_options(:order => 'name'),:label => 'Type to display' %>
  <%= f.page_selector :invalid_page_id, :label => 'Invalid Redirect',:description => 'Page to redirect to if invalid' %>
  <%= f.page_selector :success_page_id, :label => 'Successful Edit Page' %>
  <%= f.select :content_publication_id,  ContentPublication.find_select_options(:all,:conditions => { :publication_type => 'edit', :content_model_id => @social_unit_type.content_model_id }) if @social_unit_type && @social_unit_type.content_model %>
<% end -%>
</div>
